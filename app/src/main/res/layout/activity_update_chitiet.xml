<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChitietNhapKho.updateChitiet">
    <TextView
        android:id="@+id/ed_MavatTu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Chọn Mã Vật Tư"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ed_SoLuong"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <EditText
        android:id="@+id/ed_SoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Số Lượng"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/ed_MavatTu" />
    <EditText
        android:id="@+id/ed_DonViTinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Đơn Vị Tính"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/ed_SoLuong" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:text="Cập nhật"
        app:layout_constraintStart_toStartOf="@+id/ed_DonViTinh"
        app:layout_constraintTop_toBottomOf="@+id/ed_DonViTinh" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="104dp"
        android:text="Xóa"
        app:layout_constraintStart_toStartOf="@+id/ed_DonViTinh"
        app:layout_constraintTop_toBottomOf="@+id/ed_DonViTinh" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:text="Mã Vật Tư"
        app:layout_constraintBaseline_toBaselineOf="@+id/ed_MavatTu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ed_MavatTu"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="149dp"
        android:text="Số Lượng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:text="Đơn Vị Tính"
        app:layout_constraintBaseline_toBaselineOf="@+id/ed_DonViTinh"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinerMaVatTu"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_MavatTu"
        app:layout_constraintLeft_toLeftOf="@+id/ed_MavatTu"
        app:layout_constraintRight_toRightOf="@+id/ed_DonViTinh"/>
</androidx.constraintlayout.widget.ConstraintLayout>